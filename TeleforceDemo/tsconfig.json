{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    // Path alias config
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@appNav": ["src/navigation/appNav.tsx"],
      "@appAuth": ["src/navigation/authNav.tsx"],
      "@components": ["src/components/index"],
      "@screens": ["src/screens/*"],
      "@assets": ["src/assets/*"],
      "@theme": ["src/theme/index"],
      "@global": ["src/global/*"],
      "@utils": ["src/utils/*"]
    }
  }
}
